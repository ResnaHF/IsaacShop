{% extends "_commun.twig" %} 
{% block content %}
    <div class="col-xs-2 col-sm-4 col-md-5 col-lg-5"></div>
    <div class="col-xs-8 col-sm-4 col-md-2 col-lg-2">
        <form class="form-row"  method="post" action="/login/" >
        	<div class="input-group">
                <span class="input-group-addon">Identifiant</span>
        		<input type="login" class="form-control" name="login" maxlength=16 value="{{login}}" required>
        	</div>
        	<div class="input-group">
                <span class="input-group-addon">Mot de passe</span>
        		<input type="password" class="form-control" name="mdp" maxlength=16 required>
        	</div>
        	<div class="center">
        	    <button type="submit" class="btn btn-primary">Se connecter</button>
        	</div>
        </form>
    </div>
    <divclass="col-xs-2 col-sm-4 col-md-5 col-lg-5"></div>
{% endblock %}
