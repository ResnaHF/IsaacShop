{% extends "_commun.twig" %} 

{% block content %}
        <h1>CART</h1> 
        <ul>
            {% for id in cart.getIdList  %}
                {% set item = cart.getItem(id) %}
                <li>
                     {{cart.getNumberItem(id)}} X <a href="/item/{{id}}">{{item.getName}}</a> : {{cart.getAmountItem(id)}} <img src="/ressources/coin.png"/>
                    <a href="/cart/plus/{{item.getId}}">plus</a>
                    <a href="/cart/minus/{{item.getId}}">minus</a>
                    <a href="/cart/remove/{{item.getId}}">remove</a>
                </li>
            {% endfor %}
        </ul>
        
        <p>Total : {{cart.getAmount}} <img src="/ressources/coin.png"/></p>
{% endblock %}