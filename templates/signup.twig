{% extends "_commun.twig" %} 

{% block content %}
    <h1>Formulaire de saisie d'un compte</h1>   
    <form action="/validate/" method="post" name="form" onsubmit="return verifyForm()">
        
        <label for="lastname">Nom : </label>
        <input type="text" name="lastname" id="lastname"/>
        <br/>
        
        <label for="firstname">Prenom : </label>
        <input type="text" name="firstname" id="firstname"/>
        <br/>
        
        <label for="Adresse">Adresse: </label>
        <input type="text" name="Adresse" id="Adresse"/>
        <br/>
        
        <label for="CodePostal">Code postal  : </label>
        <input type="text" name="CodePostal" id="CodePostal"/>
        <br/>
        
        <label for="Ville">Ville : </label>
        <input type="text" name="Ville" id="Ville"/>
        <br/>
        
        <label for="Telephone">Téléphone : </label>
        <input type="tel" name="Telephone" id="Telephone" onfocus="resetPhoneMsg()" onblur="verifyPhone()"/>
        <span class="errorMsg" id="divTelephone"></span>
        <br/>
        
        <label for="email">Email : </label>
        <input type="email" name="email" id="email"/>
        <br/>
        
        <label for="login">Login : </label>
        <input type="text" name="login" id="login"/>{{login}}
        </br>
        
        <label for="password1">Mot de passe : </label>
        <input type="password" name="password1" id="password1" onfocus="resetPassword1Msg()" onblur="verifyPassword1()"/>
        <span class="errorMsg" id="divPassword1"></span>
        </br>
        
        <label for="password2">Confimer le mot de passe : </label>
        <input type="password" name="password2" id="password2" onfocus="resetPassword2Msg()" onblur="verifyPassword2()"/>
        <span class="errorMsg" id="divPassword2"></span>
        </br>
        
        <input type="checkbox" name="News" id="News" checked/>
        <label for"News">Je souhaite recevoir les newsletters du site</label>
        <br/>
        
        <input type="checkbox" name="CGU" id="CGU"/>
        <label for"CGU">J'accepte les CGU</label>
        <span class="errorMsg" id="divCGU"></span>
        <br/>
        
        <br/>
        <input type="submit" value="S'enregistrer"/>
    </form>
    <script type="text/javascript" src="ressources/script.js"></script>
    {% endblock %}